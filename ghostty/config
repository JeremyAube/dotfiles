font-family = "IosevkaCustom Nerd Font"
font-size = 17

theme = Nvim Dark

font-thicken = true
shell-integration = zsh

keybind = super+ctrl+h=new_split:left
keybind = super+ctrl+j=new_split:down
keybind = super+ctrl+k=new_split:up
keybind = super+ctrl+l=new_split:right

keybind = super+shift+h=goto_split:left
keybind = super+shift+j=goto_split:bottom
keybind = super+shift+k=goto_split:top
keybind = super+shift+l=goto_split:right

keybind = super+ctrl+left=resize_split:left,100
keybind = super+ctrl+up=resize_split:up,100
keybind = super+ctrl+down=resize_split:down,100
keybind = super+ctrl+right=resize_split:right,100
keybind = shift+enter=text:\n
keybind = super+opt+k=toggle_command_palette
